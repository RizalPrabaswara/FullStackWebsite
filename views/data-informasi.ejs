<!DOCTYPE <html>
<html lang="en">
<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
<style>
  body { padding-top:50px; }
</style>
  <meta charset="UTF-8">
  <title>Toko Sejahtera - Halaman Admin</title>
</head>
<body>
<div class="container">
  <h1>Menu Administrator</h1>
  <p>Proyek Ulangan Akhir Semester Pengantar Pemrograman Full Stack</p>
  <a href="/" class="btn btn-info" role="button">Halaman Toko</a>
  <a href="/admin" class="btn btn-info" role="button">Halaman Admin</a>
  <a href="/tambah-informasi" class="btn btn-info" role="button">Tambah Informasi Toko</a>
  <a href="/data-informasi" class="btn btn-info" role="button">Data Informasi Toko</a>
</div>
<div class="container">
  <hr>
  <div class="container">
  <h3>Manajemen Informasi Toko</h3>
  <table class="table">
    <thead>
      <tr>
        <th scope="col">Nama Toko</th>
        <th scope="col">Deskripsi Toko</th>
        <th scope="col">Alamat Toko</th>
        <th scope="col">Telepon Toko</th>
        <th scope="col">Aksi</th>
      </tr>
    </thead>
    <tbody>
      <% cds.forEach(function(details) { %>
      <tr>
        <td><%= details.namatoko %></td>
        <td><%= details.deskripsitoko %></td>
        <td><%= details.alamattoko %></td>
        <td><%= details.telepontoko %></td>
        <td><a href="/edit-toko/<%=details._id%>" class="btn btn-primary">Edit</a> <a href="/hapus-toko/<%=details._id%>" class="btn btn-primary">Hapus</a>
      </tr>
      <% }) %>
    </tbody>
  </div>
</div>
</body>
</html>
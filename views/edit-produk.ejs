<!DOCTYPE <html>
<html lang="en">
<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.5.2/css/bootstrap.min.css">
<style>
  body { padding-top:50px; }
</style>
  <meta charset="UTF-8">
  <title>Toko Sejahtera - Halaman Admin</title>
</head>
<body>
<div class="container">
  <h1>Menu Administrator</h1>
  <p>Proyek Ulangan Akhir Semester Pengantar Pemrograman Full Stack</p>
  <a href="/" class="btn btn-info" role="button">Halaman Toko</a>
  <a href="/admin" class="btn btn-info" role="button">Halaman Admin</a>
  <a href="/tambah-produk" class="btn btn-info" role="button">Tambah Produk</a>
  <a href="/data-produk" class="btn btn-info" role="button">Data Produk</a>
</div>
<div class="container">
  <hr>
  <div class="container">
  <h3>Manajemen Produk</h3>
  <% cds.forEach(function(details) { %>
  <form action="/edit-produk/<%=details._id%>" method="POST">
    <label>Nama Produk</label>
    <input type="text" class="form-control" value="<%= details.namaproduk %>" name="namaproduk">
    <label>Foto Produk</label>
    <input type="text" class="form-control" value="<%= details.fotoproduk %>" name="fotoproduk">
    <label>Harga Produk</label>
    <input type="text" class="form-control" value="<%= details.hargaproduk %>" name="hargaproduk">
    <br>
    <button class="btn btn-primary" type="submit">Kirim</button>
    <a href="/data-produk" class="btn btn-info" role="button">Kembali</a>
  </form>
  <% }) %>
  <br>
</div>
</div>
</body>
</html>